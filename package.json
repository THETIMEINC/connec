{
  "name": "connec",
  "version": "0.0.20",
  "description": "Personal card with npx. by connec.",
  "prettier": "@thetime/prettier-config",
  "bin": {
    "connec": "dist/index.js"
  },
  "scripts": {
    "build": "ncc build src/index.ts --minify --v8-cache",
    "watch": "ncc build src/index.ts --watch",
    "start": "ncc build src/index.ts",
    "lint": "eslint ./**/*.ts",
    "fix": "eslint --fix ./**/*.ts",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "ava --verbose"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/THETIMEINC/connec.git"
  },
  "keywords": [
    "business card",
    "personal card",
    "website",
    "profile",
    "connec",
    "social"
  ],
  "author": "hiroyuki kasukawa <kasukawa@thetime.co.jp> (https://thetime.co.jp/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/THETIMEINC/connec/issues"
  },
  "homepage": "https://conn.ec/",
  "devDependencies": {
    "@thetime/prettier-config": "^1.0.0",
    "@types/boxen": "^3.0.1",
    "@types/chalk": "^2.2.0",
    "@types/meow": "^6.0.0",
    "@types/node": "^15.0.1",
    "@types/node-fetch": "^2.5.10",
    "@types/universal-analytics": "^0.4.4",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "@vercel/ncc": "^0.28.4",
    "ava": "^3.15.0",
    "boxen": "^5.0.1",
    "chalk": "^4.1.1",
    "eslint": "^7.25.0",
    "jp-wrap": "^0.2.2",
    "meow": "^9.0.0",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4",
    "universal-analytics": "^0.4.23",
    "uuid": "^8.3.2"
  }
}
